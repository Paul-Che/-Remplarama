<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(function(){
      $(".owl-carousel").owlCarousel({
        items : 2,
        itemsCustom : false,
        itemsDesktop : [1199,4],
        itemsDesktopSmall : [980,3],
        itemsTablet: [768,2],
        itemsTabletSmall: false,
        itemsMobile : [479,1],
        autoPlay : 3000,
        stopOnHover : false
      });
    });
  <% end %>
<% end %>
