<div class="container">

  <div class="row">
    <div id="profile" class="col-xs-12 col-md-2 text-center">
      <ul>
        <li id="main-avatar">
          <% if current_user.picture.nil? %>
            <%= image_tag "http://placehold.it/80x80", class: "avatar-extralarge" %>
          <% else %>
            <%= image_tag current_user.picture, class: "avatar-extralarge " %>
          <% end %>
        </li>
        <li><p>Dr<%= @user.first_name %> <%= @user.last_name %></p></li>
        <hr>
        <li><p><%=@user.speciality %></p></li>
        <hr>
        <li>
      </ul>
    </div>
    <div id="calendar" class="col-xs-12 col-md-10 text-center">
      <p>big calendar to be implemented</p>
    </div>
  </div>

  <div class="row">
    <div id="user_content" class="col-xs-12 col-md-8 text-center">
      <ul>
        <li><p><%= @user.presentation %></p></li>
        <hr>
        <li><%=@user.education %></li>
        <hr>
        <li><%=@user.publications %></li>
        <hr>
      </ul>
    </div>
    <div class="map" class="hidden-xs col-md-4 text-center">
      <p>here is the corresponding map</p>
    </div>
  </div>

  <div class="row">
    <div id="user_history" class="col-xs-12 col-md-8 text-center">
      <p>user history to be implemented</p>
    </div>
  </div>

</div>
