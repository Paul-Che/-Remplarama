<div class="container">
  <div class="row col-xs-12 col-sm-6 col-sm-offset-3">
    <div class="form-design background">
      <div class="text-center" id="form_title">
        <h4>Envoyer un message au Dr. <%= @user.last_name %></h4>
      </div>
        <%= simple_form_for (Message.new),
          :url => url_for(:action => 'create_new', :controller => 'messages'),
          :method => 'post' do |f| %>
            <div class="form-inputs">
              <%#= f.input :email, default: @user.email %>
              <%= f.input :content, placeholder: "Ecrivez lui un message", :input_html => {:minlength => 10 , maxlength: 300} %>
            </div>
            <div class="form-actions text-center">
              <%= f.button :submit, "Envoyer", :class => 'btn btn-primary', style: "width: 100%;" %>
            </div>
        <% end %>
        <%#= link_to "Envoyer", path, method: :delete, remote: true %>
        <%# render "devise/shared/links" %>
    </div>
  </div>
</div>
